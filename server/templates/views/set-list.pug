extends ../layouts/base.pug

block content
    section.wrapper.blocks.blocks_center
        div.blocks-block.blocks-block_2up
            div.txt_light.txt_lg!= data.setList.text

    each set in data.setList.sets
        section.wrapper.blocks
            div.blocks-block.blocks-block_tabletCollapse.blocks-block_2up
                img.fitParent(src=mkImgUrl('c_fit,q_auto:best,w_1200', set.coverImg))
            div.blocks-block.blocks-block_tabletCollapse.blocks-block_2up
                div!= set.text
                ul
                    each track in set.tracks
                        li(data-audio-file= JSON.stringify({
                            sequence: track.sequence,
                            artist: track.artist,
                            title: track.title,
                        }))
                            img(src=mkImgUrl('c_fit,q_auto:best,w_100', track.img))
                            span= `${track.artist} â€” ${track.title}`
                            audio(
                                controls
                                preload="metadata"
                                src=track.getUrl())
                div
                    a(href="#") download
